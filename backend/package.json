{
  "name": "rpg-cards-backend",
  "version": "1.0.0",
  "description": "RPG Card Maker Backend API",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate src/migrations/migration -d src/config/database.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/database.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "typeorm": "^0.3.17",
    "sqlite3": "^5.1.6",
    "canvas": "^2.11.2",
    "pdfkit": "^0.15.0",
    "multer": "^1.4.5-lts.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "@types/multer": "^1.4.11",
    "@types/pdfkit": "^0.13.4",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0"
  }
}
